extends layout

block content
  #container
    .row
      .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-12
        form(class='form-signin', action='/login', method='post')
          h2.form-signin-heading Please sign in
          input(name="username", type='text', class='text-username form-control', placeholder='Username', autofocus)
          input(name="password", type='password', class='text-password form-control', placeholder='Password')
          label.checkbox
            input(type='checkbox', value='remember-me')
            span Remember me
          button(class='btn btn-login btn-lg btn-primary btn-block') Sign in